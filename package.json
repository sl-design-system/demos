{
  "name": "demos-monorepo",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:lit": "wireit",
    "build:lit": "wireit",
    "preview:lit": "wireit",
    "build": "yarn workspaces foreach --all run build"
  },
  "wireit": {
    "dev:lit": {
      "dependencies": [
        "./apps/lit-demo:dev"
      ]
    },
    "build:lit": {
      "dependencies": [
        "./apps/lit-demo:build"
      ]
    },
    "preview:lit": {
      "dependencies": [
        "./apps/lit-demo:preview"
      ]
    },
    "build": {
      "dependencies": [
        "./apps/angular-demo:build",
        "./apps/lit-demo:build",
        "./apps/svelte-demo:build",
        "./apps/vue-demo:build"
      ]
    }
  },
  "dependencies": {
    "@floating-ui/dom": "^1.6.13",
    "@sl-design-system/angular": "^3.1.0",
    "@sl-design-system/button": "^1.2.4",
    "@sl-design-system/sanoma-learning": "^0.4.5",
    "@sl-design-system/tooltip": "^1.1.5",
    "@angular/common": "^19.0.0",
    "@angular/compiler": "^19.0.0",
    "@angular/core": "^19.0.0",
    "@angular/platform-browser": "^19.0.0",
    "@angular/platform-browser-dynamic": "^19.0.0",
    "@open-wc/scoped-elements": "^3.0.5",
    "rxjs": "^7.8.0",
    "zone.js": "^0.14.0"
  },
  "devDependencies": {
    "@angular/cli": "^19.0.0",
    "@angular-devkit/build-angular": "^19.0.0",
    "@angular/compiler-cli": "^19.0.0",
    "typescript": "5.8.3",
    "wireit": "^0.14.12"
  }
}

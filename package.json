{
  "name": "demos-monorepo",
  "packageManager": "yarn@4.9.2",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "wireit",
    "format": "wireit",
    "lint": "wireit",
    "lint:fix": "wireit",
    "stylelint": "wireit",
    "stylelint:fix": "wireit"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "./apps/angular-demo:build",
        "./apps/lit-demo:build",
        "./apps/svelte-demo:build",
        "./apps/vue-demo:build"
      ]
    },
    "format": {
      "command": "prettier --write .",
      "files": [
        "**/*.{js,ts,json,html,svelte,vue,css,scss,md}"
      ],
      "output": []
    },
    "lint": {
      "dependencies": [
        "./apps/angular-demo:lint",
        "./apps/lit-demo:lint",
        "./apps/svelte-demo:lint",
        "./apps/vue-demo:lint"
      ]
    },
    "lint:fix": {
      "dependencies": [
        "./apps/angular-demo:lint:fix",
        "./apps/lit-demo:lint:fix",
        "./apps/svelte-demo:lint:fix",
        "./apps/vue-demo:lint:fix"
      ]
    },
    "stylelint": {
      "command": "stylelint '**/*.{css,scss}'",
      "files": [
        "**/*.{css,scss}"
      ],
      "output": []
    },
    "stylelint:fix": {
      "command": "stylelint '**/*.{css,scss}' --fix",
      "files": [
        "**/*.{css,scss}"
      ],
      "output": []
    }
  },
  "dependencies": {
    "@sl-design-system/angular": "^3.1.0",
    "@sl-design-system/button": "^1.2.4",
    "@sl-design-system/sanoma-learning": "^0.4.5",
    "@sl-design-system/tooltip": "^1.1.5"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.1.3",
    "@angular-eslint/eslint-plugin": "^20.1.1",
    "@angular-eslint/eslint-plugin-template": "^20.1.1",
    "@angular-eslint/template-parser": "^20.1.1",
    "@angular/cli": "^20.1.3",
    "@angular/common": "^20.1.3",
    "@angular/compiler": "^20.1.3",
    "@angular/compiler-cli": "^20.1.3",
    "@angular/core": "^20.1.3",
    "@angular/platform-browser": "^20.1.3",
    "@angular/platform-browser-dynamic": "^20.1.3",
    "@floating-ui/dom": "^1.6.13",
    "@open-wc/scoped-elements": "^3.0.5",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-lit": "^2.1.1",
    "eslint-plugin-lit-a11y": "^5.1.1",
    "eslint-plugin-svelte": "^3.11.0",
    "eslint-plugin-vue": "^10.3.0",
    "eslint-plugin-wc": "^3.0.1",
    "globals": "^16.3.0",
    "postcss-lit": "^1.2.0",
    "prettier": "^3.6.2",
    "rxjs": "^7.8.0",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-config-standard-scss": "^15.0.1",
    "stylelint-order": "^7.0.0",
    "stylelint-prettier": "^5.0.3",
    "stylelint-use-logical": "^2.1.2",
    "svelte-eslint-parser": "^1.3.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vue-eslint-parser": "^10.2.0",
    "wireit": "^0.14.12",
    "zone.js": "^0.15.1"
  }
}

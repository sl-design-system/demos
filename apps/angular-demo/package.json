{
  "name": "angular-demo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "wireit",
    "lint": "wireit",
    "lint:fix": "wireit",
    "start": "wireit"
  },
  "wireit": {
    "build": {
      "command": "ng build",
      "files": [
        "angular.json",
        "tsconfig.json",
        "tsconfig.app.json",
        "src/**/*"
      ],
      "output": [
        "dist/**"
      ]
    },
    "lint": {
      "command": "eslint src/**/*.ts",
      "files": [
        "src/**/*.ts"
      ]
    },
    "lint:fix": {
      "command": "eslint src/**/*.ts --fix",
      "files": [
        "src/**/*.ts"
      ]
    },
    "start": {
      "command": "ng serve",
      "files": [
        "angular.json",
        "tsconfig.json",
        "tsconfig.app.json",
        "src/**/*"
      ],
      "service": true
    }
  },
  "dependencies": {
    "@angular/common": "^20.1.6",
    "@angular/compiler": "^20.1.6",
    "@angular/core": "^20.1.6",
    "@angular/forms": "^20.1.6",
    "@angular/platform-browser": "^20.1.6",
    "@angular/platform-browser-dynamic": "^20.1.6",
    "rxjs": "^7.8.2",
    "zone.js": "^0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.1.3",
    "@angular-eslint/eslint-plugin": "^20.1.1",
    "@angular-eslint/eslint-plugin-template": "^20.1.1",
    "@angular-eslint/template-parser": "^20.1.1",
    "@angular/cli": "^20.1.5",
    "@angular/compiler-cli": "^20.1.6",
    "@typescript-eslint/types": "^8.38.0",
    "@typescript-eslint/utils": "^8.38.0",
    "eslint": "^8.57.0",
    "typescript": "^5.8.3",
    "wireit": "^0.14.12"
  }
}

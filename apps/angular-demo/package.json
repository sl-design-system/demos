{
  "name": "angular-demo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "wireit",
    "lint": "wireit",
    "lint:fix": "wireit",
    "start": "wireit"
  },
  "wireit": {
    "build": {
      "command": "ng build",
      "files": [
        "angular.json",
        "tsconfig.json",
        "tsconfig.app.json",
        "src/**/*"
      ],
      "output": [
        "dist/**"
      ]
    },
    "lint": {
      "command": "eslint . --ext .ts",
      "files": [
        "src/**/*.ts",
        "src/**/*.html"
      ]
    },
    "lint:fix": {
      "command": "eslint . --ext .ts --fix",
      "files": [
        "src/**/*.ts",
        "src/**/*.html"
      ]
    },
    "start": {
      "command": "ng serve",
      "files": [
        "angular.json",
        "tsconfig.json",
        "tsconfig.app.json",
        "src/**/*"
      ],
      "service": true
    }
  },
  "dependencies": {
    "@angular/common": "^20.1.3",
    "@angular/compiler": "^20.1.3",
    "@angular/core": "^20.1.3",
    "@angular/platform-browser": "^20.1.3",
    "@angular/platform-browser-dynamic": "^20.1.3",
    "rxjs": "^7.8.0",
    "zone.js": "^0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.1.3",
    "@angular-eslint/eslint-plugin": "^20.1.1",
    "@angular-eslint/eslint-plugin-template": "^20.1.1",
    "@angular-eslint/template-parser": "^20.1.1",
    "@angular/cli": "^20.1.3",
    "@angular/compiler-cli": "^20.1.3",
    "@typescript-eslint/types": "^5.38.0",
    "@typescript-eslint/utils": "^5.38.0",
    "eslint": "^9.31.0",
    "typescript": "^5.8.3",
    "wireit": "^0.14.12"
  }
}

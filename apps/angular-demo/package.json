{
  "name": "angular-demo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "wireit",
    "build": "wireit",
    "lint": "wireit",
    "lint:fix": "wireit"
  },
  "wireit": {
    "start": {
      "command": "ng serve",
      "files": [
        "angular.json",
        "tsconfig.json",
        "tsconfig.app.json",
        "src/**/*"
      ],
      "service": true
    },
    "build": {
      "command": "ng build",
      "files": [
        "angular.json",
        "tsconfig.json",
        "tsconfig.app.json",
        "src/**/*"
      ],
      "output": [
        "dist/**"
      ]
    },
    "lint": {
      "command": "eslint --config eslint.config.mjs --ext .ts,.html .",
      "files": [
        "src/**/*.ts",
        "src/**/*.html"
      ]
    },
    "lint:fix": {
      "command": "eslint --config eslint.config.mjs --ext .ts,.html --fix .",
      "files": [
        "src/**/*.ts",
        "src/**/*.html"
      ],
      "output": [
        "src/**/*.ts",
        "src/**/*.html"
      ]
    }
  },
  "dependencies": {
    "@angular/core": "^19.0.0",
    "@angular/common": "^19.0.0",
    "@angular/platform-browser": "^19.0.0",
    "@angular/platform-browser-dynamic": "^19.0.0",
    "@angular/compiler": "^19.0.0",
    "rxjs": "^7.8.0",
    "zone.js": "^0.14.0"
  },
  "devDependencies": {
    "wireit": "^0.14.12",
    "@angular/cli": "^19.0.0",
    "@angular-devkit/build-angular": "^19.0.0",
    "@angular/compiler-cli": "^19.0.0",
    "typescript": "5.8.3",
    "@angular-eslint/eslint-plugin-template": "^20.1.1"
  }
}

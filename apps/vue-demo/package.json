{
  "name": "vue-demo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wireit",
    "build": "wireit",
    "preview": "wireit",
    "lint": "wireit",
    "lint:fix": "wireit"
  },
  "wireit": {
    "dev": {
      "command": "node scripts/build.js --watch",
      "files": [
        "scripts/build.js",
        "index.html",
        "tsconfig.json",
        "src/**/*"
      ],
      "service": true
    },
    "build": {
      "command": "node scripts/build.js",
      "files": [
        "scripts/build.js",
        "index.html",
        "tsconfig.json",
        "src/**/*"
      ],
      "output": [
        "dist/**"
      ]
    },
    "preview": {
      "command": "wds --root-dir dist --open",
      "dependencies": [
        "build"
      ]
    },
    "lint": {
      "command": "eslint . --ext .ts",
      "files": [
        "src/**/*.ts",
        "src/**/*.vue"
      ]
    },
    "lint:fix": {
      "command": "eslint . --ext .ts --fix",
      "files": [
        "src/**/*.ts",
        "src/**/*.vue"
      ]
    }
  },
  "dependencies": {
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "esbuild": "^0.23.0",
    "esbuild-plugin-vue-next": "^0.1.4",
    "wireit": "^0.14.12"
  }
}

{
  "name": "lit-demo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "generate-styles": "wireit",
    "dev": "wireit",
    "build": "wireit",
    "preview": "wireit"
  },
  "wireit": {
    "generate-styles": {
      "command": "node scripts/generate-styles.js",
      "files": ["scripts/generate-styles.js", "src/**/*.scss", "package.json"],
      "output": ["src/**/*.scss.js"]
    },
    "dev": {
      "command": "node scripts/build.js --watch",
      "dependencies": ["generate-styles"],
      "service": true
    },
    "build": {
      "command": "node scripts/build.js",
      "files": ["scripts/build.js", "src/**/*", "index.html", "tsconfig.json"],
      "dependencies": ["generate-styles"],
      "output": ["dist/**/*"]
    },
    "preview": {
      "command": "wds --root-dir dist --open",
      "dependencies": ["build"]
    }
  },
  "dependencies": {
    "lit": "^3.3.0",
    "@open-wc/scoped-elements": "^3.0.5",
    "@webcomponents/scoped-custom-element-registry": "^0.0.9"
  },
  "devDependencies": {
    "@web/dev-server": "^0.4.6",
    "esbuild": "^0.23.0",
    "sass": "^1.51.0",
    "typescript": "^5.2.2",
    "wireit": "^0.14.12"
  }
}

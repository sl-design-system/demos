{
  "name": "lit-demo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "wireit",
    "dev": "wireit",
    "generate-styles": "wireit",
    "lint": "wireit",
    "lint:fix": "wireit",
    "preview": "wireit"
  },
  "wireit": {
    "generate-styles": {
      "command": "node scripts/generate-styles.js",
      "files": [
        "scripts/generate-styles.js",
        "src/**/*.scss",
        "package.json"
      ],
      "output": [
        "src/**/*.scss.js"
      ]
    },
    "dev": {
      "command": "node scripts/build.js --watch",
      "dependencies": [
        "generate-styles"
      ],
      "service": true
    },
    "build": {
      "command": "node scripts/build.js",
      "files": [
        "scripts/build.js",
        "src/**/*",
        "index.html",
        "tsconfig.json"
      ],
      "dependencies": [
        "generate-styles"
      ],
      "output": [
        "dist/**/*"
      ]
    },
    "preview": {
      "command": "wds --root-dir dist --open",
      "dependencies": [
        "build"
      ]
    },
    "lint": {
      "command": "eslint . --ext .ts,.js,.html",
      "files": [
        "src/**/*.ts"
      ]
    },
    "lint:fix": {
      "command": "eslint . --ext .ts,.js,.html --fix",
      "files": [
        "src/**/*.ts"
      ]
    }
  },
  "dependencies": {
    "@open-wc/scoped-elements": "^3.0.5",
    "@webcomponents/scoped-custom-element-registry": "^0.0.10",
    "lit": "^3.3.0"
  },
  "devDependencies": {
    "@web/dev-server": "^0.4.6",
    "esbuild": "^0.25.8",
    "sass": "^1.89.2",
    "typescript": "^5.8.3",
    "wireit": "^0.14.12"
  }
}
